<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_shade_2"
    tools:context="fragments.HomeFragment">
  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:src="@drawable/lower_curver_shape"
      app:layout_constraintBottom_toTopOf="@+id/top_horizontal_guideline"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/upper_layout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shape_inner_top_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/home_shape_ractangle"
        app:layout_constraintBottom_toTopOf="@+id/shape_inner_end_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shape_inner_top_horizontal" />

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/home_time_icon"
        app:layout_constraintBottom_toTopOf="@+id/shape_inner_end_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/shape_inner_start_vertical"
        app:layout_constraintTop_toTopOf="@+id/shape_inner_start_horizontal" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/gray_shade_1"
        app:layout_constraintBottom_toTopOf="@+id/shape_inner_end_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/shape_inner_middle_vertical"
        app:layout_constraintTop_toTopOf="@+id/shape_inner_start_horizontal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/sf_ui_display_heading"
        android:text="Total Time"
        android:textColor="@color/light_green"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="@+id/shape_inner_end_vertical"
        app:layout_constraintTop_toTopOf="@+id/shape_inner_start_horizontal" />

    <TextView
        android:id="@+id/total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_ui_display_heading"
        android:text="00h:35m"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintStart_toStartOf="@+id/shape_inner_end_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shape_inner_start_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shape_inner_end_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shape_inner_start_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shape_inner_middle_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shape_inner_end_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/home_shape_ractangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shape_inner_end_horizontal">

      <View
          android:id="@+id/today_shape_view"
          android:layout_width="@dimen/_70sdp"
          android:layout_height="0dp"
          android:background="@drawable/home_shape_ractangle_1"

          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/today"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_18sdp"
          android:fontFamily="@font/sf_ui_display_heading"
          android:text="Today"
          android:textColor="@color/white"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:id="@+id/end_view"
          android:layout_width="@dimen/_2sdp"
          android:layout_height="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_15sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/today"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:id="@+id/seven_days_shape_view"
          android:layout_width="@dimen/_70sdp"
          android:layout_height="0dp"
          android:background="@drawable/home_shape_ractangle_1"

          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/end_view"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/sevenDays"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:fontFamily="@font/sf_ui_display_heading"
          android:text="7 Days"
          android:textColor="@color/white"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/end_view"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:id="@+id/end_view2"
          android:layout_width="@dimen/_2sdp"
          android:layout_height="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_15sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/sevenDays"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:id="@+id/month_shape_view"
          android:layout_width="@dimen/_70sdp"
          android:layout_height="0dp"
          android:background="@drawable/home_shape_ractangle_1"

          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/end_view2"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:fontFamily="@font/sf_ui_display_heading"
          android:text="Month"
          android:textColor="@color/white"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/end_view2"
          app:layout_constraintTop_toTopOf="parent" />

      <View
          android:id="@+id/end_view3"
          android:layout_width="@dimen/_2sdp"
          android:layout_height="@dimen/_10sdp"
          android:layout_marginStart="@dimen/_15sdp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/month"
          app:layout_constraintTop_toTopOf="parent" />

      <ImageView
          android:id="@+id/graph_icon"
          android:layout_width="@dimen/_11sdp"
          android:layout_height="@dimen/_11sdp"
          android:layout_marginStart="@dimen/_18sdp"
          android:src="@drawable/graph_svg_icon_mdpi"
          android:textColor="@color/white"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/end_view3"
          app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/usage_recycler"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="@dimen/_7sdp"
      android:divider="@null"
      android:dividerHeight="0dp"
      app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
      app:layout_constraintEnd_toEndOf="@+id/end_guideline"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/start_guideline"
      app:layout_constraintTop_toBottomOf="@+id/upper_layout">

  </androidx.recyclerview.widget.RecyclerView>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/bottom_layout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_80sdp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/home_shape_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/home_icon"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Home"
        android:textColor="@color/purple"

        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_shape_vertical_guideline_2"
        app:layout_constraintStart_toStartOf="@+id/bottom_shape_vertical_guideline_1"
        app:layout_constraintTop_toTopOf="@+id/bottom_shape_horizontal" />

    <TextView
        android:id="@+id/all_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/apps_icon_mdpi"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Apps"
        android:textColor="@color/gray_shade_1"

        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_shape_vertical_guideline_3"
        app:layout_constraintStart_toStartOf="@+id/bottom_shape_vertical_guideline_2"
        app:layout_constraintTop_toTopOf="@+id/bottom_shape_horizontal" />

    <TextView
        android:id="@+id/vault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/vault_icon"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Vault"
        android:textColor="@color/gray_shade_1"

        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_shape_vertical_guideline_4"
        app:layout_constraintStart_toStartOf="@+id/bottom_shape_vertical_guideline_3"
        app:layout_constraintTop_toTopOf="@+id/bottom_shape_horizontal" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="@dimen/_5sdp"
        android:text="Profile"
        android:textColor="@color/gray_shade_1"

        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_shape_vertical_guideline_5"
        app:layout_constraintStart_toStartOf="@+id/bottom_shape_vertical_guideline_4"
        app:layout_constraintTop_toTopOf="@+id/bottom_shape_horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_shape_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_shape_vertical_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_shape_vertical_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_shape_vertical_guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_shape_vertical_guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_shape_vertical_guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />


  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/top_horizontal_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.3" />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/start_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.05" />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/end_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.95" />
  <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@+id/usage_recycler"
      app:layout_constraintEnd_toStartOf="@+id/end_guideline"
      app:layout_constraintStart_toStartOf="@+id/start_guideline"
      app:layout_constraintTop_toTopOf="@+id/usage_recycler" />





</androidx.constraintlayout.widget.ConstraintLayout>