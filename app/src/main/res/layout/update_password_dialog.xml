<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"

        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_percent="0.97" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top_guideline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                card_view:layout_constraintGuide_percent="0.12" />


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:src="@drawable/check_mark"

                card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
                card_view:layout_constraintStart_toStartOf="@+id/guideline2"
                card_view:layout_constraintTop_toTopOf="@+id/top_guideline" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:textColor="@color/black"
                android:text="Your password is upgraded"
                android:fontFamily="@font/sf_ui_display_heading"
                android:textSize="@dimen/_15sdp"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
                card_view:layout_constraintStart_toStartOf="@+id/guideline2"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView7" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ok_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/add_edit_card"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/sf_ui_display_heading"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"

                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/button_end_guideline"
                card_view:layout_constraintStart_toStartOf="@+id/button_start_guideline"
                card_view:layout_constraintTop_toBottomOf="@+id/textView4" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/button_start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_percent="0.1" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/button_end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_percent="0.9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_card_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>